<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:textSize="13sp"
        android:textColor="#222222"
        android:lineSpacingExtra="2.5sp"
        android:text="회원가입 (1/2)"
        android:gravity="center"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="11dp"
        android:layout_gravity="bottom"
        android:background="@drawable/shadow"
        android:layout_marginBottom="109.5dp">
    </View>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="#707070"
        android:lineSpacingExtra="2.5sp"
        android:text="서비스 이용을 위해 필수 항목에 동의해 주세요."
        android:layout_gravity="center"
        android:layout_marginBottom="23dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="#707070"
        android:lineSpacingExtra="2.5sp"
        android:text="전체 동의"
        android:background="@drawable/gray_border"
        android:paddingVertical="13dp"
        android:paddingLeft="13dp"
        android:layout_marginHorizontal="42dp"
        android:layout_marginBottom="11.5dp"
        android:clickable="true"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingVertical="23dp"
        android:paddingLeft="13dp"
        android:layout_marginHorizontal="42dp"
        android:layout_marginBottom="18dp"
        android:background="@drawable/gray_border"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#707070"
            android:lineSpacingExtra="2.5sp"
            android:text="서비스 이용약관 동의 (필수)"
            android:layout_marginBottom="23dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#707070"
            android:lineSpacingExtra="2.5sp"
            android:text="위치기반서비스 이용약관 동의 (필수)"
            android:layout_marginBottom="23dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#707070"
            android:lineSpacingExtra="2.5sp"
            android:text="개인정보 수집 및 제3자 제공 동의 (필수)"
            android:layout_marginBottom="23dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#707070"
            android:lineSpacingExtra="2.5sp"
            android:text="마케팅 정보 수신 동의 (선택)"
            />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10.5sp"
        android:textColor="#707070"
        android:lineSpacingExtra="2sp"
        android:layout_gravity="center"
        android:layout_marginBottom="136dp"
        android:text="선택 약관에 동의하지 않으셔도 가입을 진행할 수 있습니다."
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="7.5dp"
        android:layout_gravity="bottom"
        android:background="@drawable/shadow_top">
    </View>

    <TextView
        android:id="@+id/sign_up_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16.5sp"
        android:textColor="#3664cd"
        android:lineSpacingExtra="3.5sp"
        android:paddingVertical="16dp"
        android:gravity="center"
        android:text="다음"
        />
</LinearLayout>
</ScrollView>