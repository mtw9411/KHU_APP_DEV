<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:textSize="13sp"
        android:textColor="#222222"
        android:text="회원가입 (1/2)"
        android:gravity="center"
        android:fontFamily="@font/notosanscjkkr_bold"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="11dp"
        android:layout_gravity="bottom"
        android:background="@drawable/shadow"
        android:layout_marginBottom="109.5dp">
    </View>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="#707070"
        android:text="서비스 이용을 위해 필수 항목에 동의해 주세요."
        android:layout_gravity="center"
        android:layout_marginBottom="23dp"
        android:fontFamily="@font/notosanscjkkr_bold"
        />

    <RelativeLayout
        android:id="@+id/select_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gray_border"
        android:paddingLeft="13dp"
        android:layout_marginHorizontal="42dp"
        android:layout_marginBottom="11.5dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#707070"
            android:text="전체 동의"
            android:paddingVertical="10dp"
            android:fontFamily="@font/notosanscjkkr_bold"
            android:layout_centerVertical="true"
            />
        <ImageView
            android:id="@+id/tosImage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/check_btn"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingVertical="15dp"
        android:paddingLeft="13dp"
        android:layout_marginHorizontal="42dp"
        android:layout_marginBottom="18dp"
        android:background="@drawable/gray_border"
        >

        <RelativeLayout
            android:id="@+id/select_item1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#707070"
                android:text="서비스 이용약관 동의 (필수)"
                android:paddingVertical="10dp"
                android:layout_centerVertical="true"
                android:fontFamily="@font/notosanscjkkr_light"
                />
            <ImageView
                android:id="@+id/tosImage1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/check_btn"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/select_item2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#707070"
                android:text="위치기반서비스 이용약관 동의 (필수)"
                android:paddingVertical="10dp"
                android:layout_centerVertical="true"
                android:fontFamily="@font/notosanscjkkr_light"
                />
            <ImageView
                android:id="@+id/tosImage2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/check_btn"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/select_item3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#707070"
                android:text="개인정보 수집 및 제3자 제공 동의 (필수)"
                android:paddingVertical="10dp"
                android:layout_centerVertical="true"
                android:fontFamily="@font/notosanscjkkr_light"
                />
            <ImageView
                android:id="@+id/tosImage3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/check_btn"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/select_item4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#707070"
                android:text="마케팅 정보 수신 동의 (선택)"
                android:paddingVertical="10dp"
                android:layout_centerVertical="true"
                android:fontFamily="@font/notosanscjkkr_light"
                />
            <ImageView
                android:id="@+id/tosImage4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/check_btn"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>


    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10.5sp"
        android:textColor="#707070"
        android:layout_gravity="center"
        android:layout_marginBottom="136dp"
        android:text="선택 약관에 동의하지 않으셔도 가입을 진행할 수 있습니다."
        android:fontFamily="@font/notosanscjkkr_light"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="7.5dp"
        android:layout_gravity="bottom"
        android:background="@drawable/shadow_top">
    </View>

    <TextView
        android:id="@+id/sign_up_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16.5sp"
        android:textColor="#3664cd"
        android:paddingVertical="10dp"
        android:gravity="center"
        android:text="다음"
        android:fontFamily="@font/notosanscjkkr_bold"
        />
</LinearLayout>
</ScrollView>