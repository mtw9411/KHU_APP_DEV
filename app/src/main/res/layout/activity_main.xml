<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
<android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f7fc"
    android:paddingBottom="120dp">

    <TextView
        android:id="@+id/mainTitle"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:gravity="center"
        android:lineSpacingExtra="2.5sp"
        android:text="STUDY SESSION"
        android:textColor="#222222"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:id="@+id/main_Mystudy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="38.5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mainTitle">

        <TextView
            android:layout_width="140.5dp"
            android:layout_height="69.5dp"
            android:letterSpacing="-0.03"
            android:lineSpacingExtra="11.5sp"
            android:text="내가 참여중인 스터디방"
            android:textColor="#444444"
            android:textSize="21.5sp"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/myStudyNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="94.5dp"
            android:layout_marginTop="40dp"
            android:lineSpacingExtra="6.5sp"
            android:text="+0"
            android:textColor="#2f78db"
            android:textSize="14sp" />
    </RelativeLayout>
    <TextView
        android:id="@+id/makeStudy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="22.5dp"
        android:layout_marginRight="22.5dp"
        android:letterSpacing="-0.03"
        android:lineSpacingExtra="5.5sp"
        android:text="스터디 만들기>"
        android:textColor="#78222222"
        android:textSize="11sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/main_Mystudy" />

    <RelativeLayout
        android:id="@+id/addStudy"
        android:layout_width="103dp"
        android:layout_height="103dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="11dp"
        android:layout_marginRight="11dp"
        android:background="@drawable/blue_circle"
        app:layout_constraintEnd_toStartOf="@+id/recyclerView_myStudy"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_Mystudy">

        <ImageView
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:layout_marginTop="19dp"
            app:srcCompat="@mipmap/study_add" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="16dp"
            android:lineSpacingExtra="5sp"
            android:text="스터디 추가"
            android:textColor="#ffffff"
            android:textSize="10.5sp" />

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView_myStudy"
        android:layout_width="0dp"
        android:layout_height="103dp"
        android:layout_marginTop="20dp"
        android:scrollbars="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/addStudy"
        app:layout_constraintTop_toBottomOf="@+id/main_Mystudy">
    </android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:id="@+id/mainLayout1"
        android:layout_width="match_parent"
        android:layout_height="264dp"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:background="#ffffff"
        android:layout_marginTop="39.2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addStudy">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20.3dp"
            android:lineSpacingExtra="6.5sp"
            android:text="나를 위한 스터디 매칭"
            android:textColor="#E6222222"
            android:textSize="14sp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView_matching"
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:layout_marginTop="20.7dp"
            android:scrollbars="horizontal"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/mainLayout2"
        android:layout_width="match_parent"
        android:layout_height="202.5dp"
        android:paddingLeft="20dp"
        android:background="#ffffff"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/mainLayout1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10.8dp"
            android:lineSpacingExtra="6.5sp"
            android:text="우리동네 스터디"
            android:textColor="#E6222222"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10.8dp"
            android:layout_marginRight="26dp"
            android:layout_alignParentRight="true"
            android:lineSpacingExtra="5.5sp"
            android:text="더보기"
            android:textColor="#ADb1b1b1"
            android:textSize="11sp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView3"
            android:layout_width="match_parent"
            android:layout_height="135dp"
            android:layout_marginTop="47.5dp"
            android:scrollbars="horizontal">

        </android.support.v7.widget.RecyclerView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/mainLayout3"
        android:layout_width="match_parent"
        android:layout_height="167dp"
        android:paddingLeft="24.5dp"
        android:background="#ffffff"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/mainLayout2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18.3dp"
            android:textSize="14sp"
            android:textColor="#E6222222"
            android:lineSpacingExtra="6.5sp"
            android:text="마감 스터디"/>

        <TextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20.3dp"
            android:layout_marginLeft="86.5dp"
            android:textSize="11sp"
            android:textColor="#E60065ff"
            android:lineSpacingExtra="5.5sp"
            android:text="+1명 남음" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView4"
            android:layout_width="match_parent"
            android:layout_height="93dp"
            android:layout_marginTop="47.3dp"
            android:scrollbars="horizontal">

        </android.support.v7.widget.RecyclerView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/mainLayout4"
        android:layout_width="match_parent"
        android:layout_height="274.5dp"
        android:paddingLeft="19dp"
        android:background="#ffffff"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/mainLayout3">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14.8dp"
            android:textSize="14sp"
            android:textColor="#E6222222"
            android:lineSpacingExtra="6.5sp"
            android:text="새 스터디"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14.8dp"
            android:layout_marginLeft="73dp"
            android:textSize="11sp"
            android:textColor="#E60065ff"
            android:lineSpacingExtra="5.5sp"
            android:text="Today" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="21dp"
            android:layout_marginTop="52dp"
            android:scrollbars="horizontal">

        </android.support.v7.widget.RecyclerView>
    </RelativeLayout>

    <ImageView
        android:id="@+id/toMypage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/baseline_settings_black_36" />

</android.support.constraint.ConstraintLayout>
</ScrollView>