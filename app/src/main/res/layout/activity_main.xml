<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f4f7fc">

        <TextView
            android:id="@+id/mainTitle"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:gravity="center"
            android:text="STUDY SESSION"
            android:textColor="#222222"
            android:textSize="13sp"
            android:fontFamily="@font/notosanscjkkr_bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <RelativeLayout
            android:id="@+id/main_Mystudy"
            android:layout_width="140.5dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="38.5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mainTitle">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosanscjkkr_bold"
                android:letterSpacing="-0.03"
                android:text="내가 참여중인 스터디방"
                android:textColor="#444444"
                android:textSize="21.5sp" />

            <TextView
                android:id="@+id/myStudyNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="40dp"
                android:layout_marginRight="30dp"
                android:fontFamily="@font/notosanscjkkr_medium"
                android:text="+0"
                android:textColor="#2f78db"
                android:textSize="14sp" />
        </RelativeLayout>
        <TextView
            android:id="@+id/makeStudy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="22.5dp"
            android:layout_marginRight="22.5dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/notosanscjkkr_regular"
            android:letterSpacing="-0.03"
            android:text="스터디 만들기>"
            android:textColor="#78222222"
            android:textSize="11sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/main_Mystudy" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView_myStudy"
            android:layout_width="match_parent"
            android:layout_height="103dp"
            android:layout_marginTop="5dp"
            android:scrollbars="horizontal"
            app:layout_constraintEnd_toStartOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/main_Mystudy">
        </android.support.v7.widget.RecyclerView>

        <LinearLayout
            android:id="@+id/mainLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:background="#ffffff"
            android:layout_marginTop="39.2dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/recyclerView_myStudy">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/notosanscjkkr_medium"
                android:text="나를 위한 스터디 매칭"
                android:textColor="#E6222222"
                android:textSize="14sp" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView_matching"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="20dp"
                android:scrollbars="horizontal"/>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/mainLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:background="#ffffff"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/mainLayout1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/notosanscjkkr_medium"
                android:text="우리동네 스터디"
                android:textColor="#E6222222"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginRight="26dp"
                android:layout_alignParentRight="true"
                android:fontFamily="@font/notosanscjkkr_medium"
                android:text="더보기"
                android:textColor="#ADb1b1b1"
                android:textSize="11sp" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView_myTown"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="20dp"
                android:scrollbars="horizontal">
            </android.support.v7.widget.RecyclerView>
        </RelativeLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/mainLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="24.5dp"
            android:background="#ffffff"
            android:layout_marginTop="5dp"
            android:paddingBottom="20dp"
            app:layout_constraintTop_toBottomOf="@id/mainLayout2">

            <TextView
                android:id="@+id/mainTextView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/notosanscjkkr_medium"
                android:textSize="14sp"
                android:textColor="#E6222222"
                android:text="마감 스터디"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/notosanscjkkr_medium"
                android:text="+1명 남음"
                android:textColor="#E60065ff"
                android:textSize="11sp"
                app:layout_constraintStart_toEndOf="@+id/mainTextView3"
                app:layout_constraintTop_toTopOf="@+id/mainTextView3" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView_deadline"
                android:layout_width="match_parent"
                android:layout_height="93dp"
                android:scrollbars="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/mainTextView3"
                tools:layout_editor_absoluteX="20dp">

            </android.support.v7.widget.RecyclerView>
        </android.support.constraint.ConstraintLayout>

        <RelativeLayout
            android:id="@+id/mainLayout4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingBottom="50dp"
            android:background="#ffffff"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/mainLayout3">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/notosanscjkkr_medium"
                android:textSize="14sp"
                android:textColor="#E6222222"
                android:text="새 스터디"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="73dp"
                android:fontFamily="@font/notosanscjkkr_medium"
                android:textSize="11sp"
                android:textColor="#E60065ff"
                android:text="Today" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView_newStudy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="21dp"
                android:layout_marginTop="52dp"
                android:scrollbars="horizontal">
            </android.support.v7.widget.RecyclerView>
        </RelativeLayout>

    </android.support.constraint.ConstraintLayout>
</ScrollView>