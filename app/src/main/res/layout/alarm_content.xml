<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayout_alarm"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:paddingBottom="5dp"
    android:background="#ffffff"
    >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/alarm_image"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:elevation="3dp"/>

    <TextView
        android:id="@+id/alarm_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="8dp"
        android:text="'공기업' 스터디 새로운 투표"
        android:textColor="#e6222222"
        android:textSize="12sp"
        android:layout_toRightOf="@+id/alarm_image"
        android:fontFamily="@font/notosanscjkkr_medium"/>

    <TextView
        android:id="@+id/alarm_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="14dp"
        android:text='손지아님, ‘공기업’ 스터디에 새로운 투표가 시작되었습니다. 지금 바로 투표해주세요!"'
        android:textColor="#e6222222"
        android:textSize="11sp"
        android:layout_toRightOf="@+id/alarm_image"
        android:fontFamily="@font/notosanscjkkr_light"/>

    <TextView
        android:id="@+id/alarm_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_gravity="right"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:text="37분전"
        android:textColor="#e6222222"
        android:textSize="11sp"
        android:fontFamily="@font/notosanscjkkr_light"/>
</RelativeLayout>