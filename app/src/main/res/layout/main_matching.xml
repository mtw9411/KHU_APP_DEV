<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.v7.widget.CardView
        android:layout_width="259dp"
        android:layout_height="182.9dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="7dp"
        app:cardElevation="3dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="98.1dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/study_test" />

        <ImageView
            android:layout_width="56.3dp"
            android:layout_height="54dp"
            android:src="@mipmap/icon_32"
            android:layout_gravity="right"
            android:layout_marginRight="13.2dp"/>

        <RelativeLayout
            android:layout_width="56.3dp"
            android:layout_height="54dp"
            android:layout_gravity="right"
            android:layout_marginTop="2.3dp"
            android:layout_marginRight="13.2dp">

            <TextView
                android:id="@+id/num_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="5sp"
                android:textColor="#ff0930"
                android:textSize="11.5sp"
                tools:text="1"
                android:layout_toLeftOf="@+id/next_1"/>

            <TextView
                android:id="@+id/next_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="5sp"
                android:textColor="#ff0930"
                android:textSize="10sp"
                tools:text="위"
                android:layout_marginTop="2dp"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:id="@+id/textView19"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/num_1"
                android:layout_centerHorizontal="true"
                android:lineSpacingExtra="5sp"
                android:textColor="#ff0930"
                android:textSize="10sp"
                tools:text="매칭률 93%" />
        </RelativeLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#1a1a1a"
            android:lineSpacingExtra="6.5sp"
            tools:text="2020 공기업 스터디"
            android:layout_marginLeft="21dp"
            android:layout_marginTop="104.8dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:textColor="#1a1a1a"
            android:lineSpacingExtra="1.5sp"
            tools:text="4"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="108.8dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10.5sp"
            android:textColor="#1a1a1a"
            android:lineSpacingExtra="1.5sp"
            tools:text="/6"
            android:layout_marginLeft="157dp"
            android:layout_marginTop="108.8dp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="21dp"
            android:layout_marginTop="127.9dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10.5sp"
                android:textColor="#222222"
                android:lineSpacingExtra="5sp"
                tools:text="경기도 수원"
                android:layout_marginRight="8dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10.5sp"
                android:textColor="#222222"
                android:text="|"
                android:layout_marginRight="8dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10.5sp"
                android:textColor="#222222"
                android:lineSpacingExtra="5sp"
                tools:text="30세 미만"
                android:layout_marginRight="8dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10.5sp"
                android:textColor="#222222"
                android:text="|"
                android:layout_marginRight="8dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10.5sp"
                android:textColor="#222222"
                android:lineSpacingExtra="5sp"
                tools:text="성별 상관없음"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22.5dp"
            android:layout_marginTop="153.9dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:textColor="#ff0930"
                android:lineSpacingExtra="5.5sp"
                tools:text="자세히 보기"
                />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="19dp"
                android:layout_marginLeft="2.5dp"
                android:src="@mipmap/check_btn"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="165.5dp"
            android:layout_marginTop="153.9dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:textColor="#ff0930"
                android:lineSpacingExtra="5.5sp"
                tools:text="방 입장하기"
                />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="19dp"
                android:layout_marginLeft="2.5dp"
                android:src="@mipmap/check_btn"/>

        </LinearLayout>


    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>