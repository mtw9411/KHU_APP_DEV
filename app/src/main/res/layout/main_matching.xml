<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="190dp">

    <android.support.v7.widget.CardView
        android:layout_width="259dp"
        android:layout_height="182.9dp"
        app:cardCornerRadius="7dp"
        app:cardElevation="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="8dp">


        <ImageView
            android:id="@+id/imageView_matching"
            android:layout_width="match_parent"
            android:layout_height="98.1dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/study_test" />

        <ImageView
            android:layout_width="56.3dp"
            android:layout_height="54dp"
            android:layout_gravity="right"
            android:layout_marginRight="13.2dp"
            android:src="@mipmap/icon_32" />

        <RelativeLayout
            android:layout_width="56.3dp"
            android:layout_height="54dp"
            android:layout_gravity="right"
            android:layout_marginTop="2.3dp"
            android:layout_marginRight="13.2dp">

            <TextView
                android:id="@+id/num_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/next_1"
                android:lineSpacingExtra="5sp"
                android:textColor="#ff0930"
                android:textSize="11.5sp"
                android:text="1" />

            <TextView
                android:id="@+id/next_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="2dp"
                android:lineSpacingExtra="5sp"
                android:textColor="#ff0930"
                android:textSize="10sp"
                android:text="위" />

            <TextView
                android:id="@+id/textView19"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/num_1"
                android:layout_centerHorizontal="true"
                android:lineSpacingExtra="5sp"
                android:textColor="#ff0930"
                android:textSize="10sp"
                android:text="매칭률 93%" />
        </RelativeLayout>


        <TextView
            android:id="@+id/matching_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="21dp"
            android:layout_marginTop="104.8dp"
            android:lineSpacingExtra="6.5sp"
            android:textColor="#1a1a1a"
            android:textSize="14sp"
            android:text="2020 공기업 스터디" />

        <TextView
            android:id="@+id/matching_member"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="108.8dp"
            android:lineSpacingExtra="1.5sp"
            android:textColor="#1a1a1a"
            android:textSize="11sp"
            android:text="0" />

        <TextView
            android:id="@+id/matching_totalMember"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="157dp"
            android:layout_marginTop="108.8dp"
            android:lineSpacingExtra="1.5sp"
            android:textColor="#1a1a1a"
            android:textSize="10.5sp"
            android:text="6" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="21dp"
            android:layout_marginTop="127.9dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:lineSpacingExtra="5sp"
                android:textColor="#222222"
                android:textSize="10.5sp"
                android:text="경기도 수원" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:text="|"
                android:textColor="#222222"
                android:textSize="10.5sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:lineSpacingExtra="5sp"
                android:textColor="#222222"
                android:textSize="10.5sp"
                android:text="30세 미만" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:text="|"
                android:textColor="#222222"
                android:textSize="10.5sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="5sp"
                android:textColor="#222222"
                android:textSize="10.5sp"
                android:text="성별 상관없음" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22.5dp"
            android:layout_marginTop="153.9dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="5.5sp"
                android:textColor="#ff0930"
                android:textSize="11sp"
                android:text="자세히 보기" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="19dp"
                android:layout_marginLeft="2.5dp"
                android:src="@mipmap/check_btn" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_entrance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="165.5dp"
            android:layout_marginTop="153.9dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="5.5sp"
                android:textColor="#ff0930"
                android:textSize="11sp"
                android:text="방 입장하기" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="19dp"
                android:layout_marginLeft="2.5dp"
                android:src="@mipmap/check_btn" />

        </LinearLayout>


    </android.support.v7.widget.CardView>
</RelativeLayout>