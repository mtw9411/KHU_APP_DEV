<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:id="@+id/timeline_cardview_file"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15.5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:elevation="6dp"
        app:cardCornerRadius="7dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/file_imageview"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="12dp"
                android:outlineSpotShadowColor="#ffffff"
                android:src="@mipmap/icon_24"/>

            <TextView
                android:id="@+id/file_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="13.5dp"
                android:text="Zkqmmsl"
                android:textColor="#707070"
                android:textSize="13sp"
                android:layout_toRightOf="@+id/file_imageview"
                android:fontFamily="@font/notosanscjkkr_regular"/>

            <TextView
                android:id="@+id/file_textview"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="14dp"
                android:background="#ffffff"
                android:gravity="center"
                android:text="사진첨부"
                android:textColor="#ffffff"
                android:textSize="10sp"
                android:layout_toRightOf="@+id/file_username"
                android:fontFamily="@font/notosanscjkkr_regular"/>

            <TextView
                android:id="@+id/file_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="33dp"
                android:lineSpacingExtra="5sp"
                android:text="10분 전"
                android:textColor="#707070"
                android:textSize="10.5sp"
                android:layout_toRightOf="@+id/file_imageview"
                android:fontFamily="@font/notosanscjkkr_demilight"/>

            <TextView
                android:id="@+id/file_contentText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="80dp"
                android:background="#ffffff"
                android:overScrollMode="always"
                android:text="오답 질문이요~ 이 내용이 이해가 잘 안가네요"
                android:textColor="#707070"
                android:textSize="12sp"
                android:fontFamily="@font/notosanscjkkr_regular"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/image_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="110dp"
                android:layout_marginRight="35dp" />

            <View
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="14dp"
                android:layout_below="@+id/image_recycler"
                android:background="#29000000" />

            <ImageView
                android:id="@+id/file_scrap"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="8dp"
                android:layout_below="@+id/textView1"
                app:srcCompat="@mipmap/icon_7" />

            <ImageView
                android:id="@+id/file_comment"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_toLeftOf="@+id/file_commentNumber"
                android:layout_below="@+id/textView1"
                android:layout_marginBottom="8dp"
                app:srcCompat="@mipmap/icon_11" />

            <TextView
                android:id="@+id/file_commentNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView1"
                android:layout_alignParentRight="true"
                android:layout_marginTop="9dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="18dp"
                android:text="0"
                android:textColor="#2f78db"
                android:textSize="15sp"
                android:fontFamily="@font/sfcompactdisplay_medium"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>