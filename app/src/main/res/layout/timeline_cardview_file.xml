<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:id="@+id/timeline_cardview_file"
        android:layout_width="315dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/file_imageview"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:outlineSpotShadowColor="#ffffff"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@mipmap/icon_34" />

            <TextView
                android:id="@+id/file_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="10dp"
                android:lineSpacingExtra="2.5sp"
                android:text="Zkqmmsl"
                android:textColor="#707070"
                android:textSize="13sp"
                app:layout_constraintStart_toEndOf="@+id/file_imageview"
                app:layout_constraintTop_toTopOf="@+id/file_imageview" />

            <TextView
                android:id="@+id/file_textview"
                android:layout_width="50dp"
                android:layout_height="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:background="@drawable/text_roundshape"
                android:gravity="center"
                android:lineSpacingExtra="4.5dp"
                android:text="사진첨부"
                android:textColor="#ffffff"
                android:textSize="10sp"
                app:layout_constraintStart_toEndOf="@+id/file_username"
                app:layout_constraintTop_toTopOf="@+id/file_username" />

            <EditText
                android:id="@+id/file_contentText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="32dp"
                android:background="#ffffff"
                android:lineSpacingExtra="6sp"
                android:overScrollMode="always"

                android:text="오답 질문이요~ 이 내용이 이해가 잘 안가네요"
                android:textColor="#707070"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/file_imageview" />

            <ImageView
                android:id="@+id/fileimage1"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="32dp"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="40dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/file_contentText"
                app:srcCompat="@android:color/background_light" />

            <ImageView
                android:id="@+id/fileimage2"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                app:layout_constraintStart_toEndOf="@+id/fileimage1"
                app:layout_constraintTop_toTopOf="@+id/fileimage1"
                app:srcCompat="@android:color/background_light" />

            <ImageView
                android:id="@+id/fileimage3"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                app:layout_constraintStart_toEndOf="@+id/fileimage2"
                app:layout_constraintTop_toTopOf="@+id/fileimage2"
                app:srcCompat="@android:color/background_light" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="290dp"
                android:layout_height="1dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="48dp"
                android:background="#000000"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fileimage3" />

            <ImageView
                android:id="@+id/file_scrap"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@mipmap/icon_7" />

            <ImageView
                android:id="@+id/file_comment"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/file_commentNumber"
                app:srcCompat="@mipmap/icon_11" />

            <TextView
                android:id="@+id/file_commentNumber"
                android:layout_width="wrap_content"
                android:layout_height="13dp"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="18dp"
                android:lineSpacingExtra="2sp"
                android:text="10"
                android:textColor="#2f78db"
                android:textSize="10sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />


        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>