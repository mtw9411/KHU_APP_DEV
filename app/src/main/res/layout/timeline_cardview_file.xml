<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="315dp"
        android:layout_height="232dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="12dp"
            android:outlineSpotShadowColor="#ffffff"
            app:srcCompat="@color/colorLightBlue" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="68dp"
            android:layout_marginTop="16sp"
            android:lineSpacingExtra="2.5sp"
            android:textColor="#707070"
            android:textSize="13sp"
            tools:text="Zkqmmsl" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="50dp"
            android:layout_height="16dp"
            android:layout_marginLeft="125dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/text_roundshape"
            android:gravity="center"
            android:lineSpacingExtra="4.5dp"
            android:text="사진첨부"
            android:textColor="#ffffff"
            android:textSize="10sp" />

        <EditText
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="82dp"
            android:text="오답 질문이요~ 이 내용이 이해가 잘 안가네요"
            android:textSize="12sp"
            android:background="#ffffff"
            android:textColor="#707070"
            android:lineSpacingExtra="6sp"
            android:overScrollMode="always"

            />

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="108dp"
            android:layout_marginRight="24dp"
            android:orientation="horizontal" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="291dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="190dp"
            android:layout_marginRight="12dp"
            />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="195dp"
            app:srcCompat="@mipmap/icon_7" />

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="270dp"
            android:layout_marginTop="195dp"
            app:srcCompat="@mipmap/icon_11" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="13dp"
            android:layout_marginLeft="295dp"
            android:layout_marginTop="203dp"
            android:text="10"
            android:textColor="#2f78db"
            android:textSize="10sp"
            android:lineSpacingExtra="2sp"/>


    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>