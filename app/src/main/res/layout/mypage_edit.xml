<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/writing_title"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:gravity="center"
        android:textSize="13sp"
        android:textColor="#222222"
        android:lineSpacingExtra="6sp"
        android:text="프로필 편집"/>

    <ImageView
        android:layout_width="31dp"
        android:layout_height="29dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="13dp"
        app:srcCompat="@mipmap/icon_23" />

    <android.support.v7.widget.CardView
        android:id="@+id/cardView12"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        app:cardElevation="3dp"
        android:layout_below="@+id/writing_title">
        <RelativeLayout
            android:id="@+id/mypageEdit_relativeProfile"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="61dp">

            <TextView
                android:id="@+id/mypageEdit_editProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="13.5dp"
                android:lineSpacingExtra="6sp"
                android:text="프로필 편집"
                android:textColor="#0065ff"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/mypageEdit_editProfileBar"
                android:layout_width="60dp"
                android:layout_height="10dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="41.4dp"
                android:background="@drawable/blue_bar" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/mypageEdit_relativeDispo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginRight="67dp">

            <TextView
                android:id="@+id/mypageEdit_editDispo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="13.5dp"
                android:lineSpacingExtra="6sp"
                android:text="성향 설정"
                android:textColor="#b1b1b1"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/mypageEdit_editDispoBar"
                android:layout_width="48.5dp"
                android:layout_height="10dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="41.4dp"
                android:background="#ffffff" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <FrameLayout
        android:id="@+id/mypageEdit_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/cardView12">
    </FrameLayout>
</RelativeLayout>