<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/writing_title"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:gravity="center"
        android:textSize="13sp"
        android:textColor="#222222"
        android:lineSpacingExtra="6sp"
        android:text="프로필 편집"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="31dp"
        android:layout_height="29dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="13dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/icon_23" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        app:cardElevation="3dp"
        app:layout_constraintTop_toBottomOf="@+id/writing_title">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="61dp">
            <TextView
                android:id="@+id/textView78"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#c895ff"
                android:lineSpacingExtra="6sp"
                android:text="프로필 편집"
                android:layout_marginTop="13.5dp"/>

            <TextView
                android:id="@+id/textView80"
                android:layout_width="60dp"
                android:layout_height="10dp"
                android:background="@drawable/pink_bar"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="41.4dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginRight="67dp">
            <TextView
                android:id="@+id/textView79"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:textSize="12sp"
                android:textColor="#b1b1b1"
                android:lineSpacingExtra="6sp"
                android:text="성향 설정"
                android:layout_marginTop="13.5dp"/>
            <TextView
                android:id="@+id/textView81"
                android:layout_width="48.5dp"
                android:layout_height="10dp"
                android:background="#ffffff"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="41.4dp"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>