<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:textSize="13sp"
        android:textColor="#222222"
        android:lineSpacingExtra="2.5sp"
        android:text="계정 설정"
        android:gravity="center"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="10"
        android:background="@drawable/gray_border_statusbar"
        android:layout_marginBottom="17.7dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="5.8dp"
            android:layout_weight="5"
            android:background="@color/colorBlue"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="11sp"
        android:textColor="#707070"
        android:lineSpacingExtra="2.5sp"
        android:text="다음에 하기"
        android:layout_gravity="right"
        android:layout_marginRight="22.5dp"
        android:layout_marginBottom="9dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="#707070"
        android:lineSpacingExtra="6sp"
        android:text="이름"
        android:layout_marginLeft="41dp"
        android:layout_marginBottom="10dp"
        />

    <EditText
        android:id="@+id/account_username"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_marginHorizontal="39dp"
        android:layout_marginBottom="30.5dp"
        android:background="@drawable/gray_border_register"
        android:inputType=""/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="#707070"
        android:lineSpacingExtra="6sp"
        android:text="생년월일"
        android:layout_marginLeft="41dp"
        android:layout_marginBottom="10dp"
        />

    <EditText
        android:id="@+id/account_userbirth"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_marginHorizontal="39dp"
        android:layout_marginBottom="30.5dp"
        android:background="@drawable/gray_border_register"
        android:hint="ex) 19970715"
        android:textSize="14sp"
        android:paddingLeft="5sp"
        android:inputType="number"
        android:maxLength="8"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="#707070"
        android:lineSpacingExtra="6sp"
        android:text="성별"
        android:layout_marginLeft="41dp"
        android:layout_marginBottom="10dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="39dp"
        android:layout_marginBottom="30.5dp"
        android:weightSum="10">

        <TextView
            android:id="@+id/gender_male"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_weight="5"
            android:background="@drawable/gray_border_register"
            android:textSize="12sp"
            android:textColor="#e4e4e4"
            android:lineSpacingExtra="6sp"
            android:text="남"
            android:gravity="center"
            android:layout_marginRight="12.5dp"/>

        <TextView
            android:id="@+id/gender_female"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_weight="5"
            android:background="@drawable/gray_border_register"
            android:textSize="12sp"
            android:textColor="#e4e4e4"
            android:lineSpacingExtra="6sp"
            android:text="여"
            android:gravity="center"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="#707070"
        android:lineSpacingExtra="6sp"
        android:text="주소"
        android:layout_marginLeft="41dp"
        android:layout_marginBottom="10dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gray_border_register"
        android:layout_marginHorizontal="39dp"
        android:layout_marginBottom="30.5dp"
        android:weightSum="10">

        <TextView
            android:id="@+id/account_useraddress"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_weight="9"
            android:gravity="center"
            android:lineSpacingExtra="6sp"
            android:textColor="#e4e4e4"
            android:textSize="12sp" />

        <ImageView
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:background="@null"
            android:src="@mipmap/glass"
            android:layout_marginRight="18dp"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="#707070"
        android:lineSpacingExtra="6sp"
        android:text="관심있는 분야를 선택해보세요!"
        android:layout_marginLeft="41dp"
        android:layout_marginBottom="10dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gray_border_register"
        android:layout_marginHorizontal="39dp"
        android:layout_marginBottom="41.5dp"
        android:weightSum="10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_weight="4"
            android:text="분야"
            android:textSize="12sp"
            android:textColor="#e4e4e4"
            android:lineSpacingExtra="6sp"
            android:gravity="center" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_weight="1"
            android:text="V"
            android:textSize="12sp"
            android:textColor="#e4e4e4"
            android:lineSpacingExtra="6sp"
            android:gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_weight="4"
            android:text="상세분야"
            android:textSize="12sp"
            android:textColor="#e4e4e4"
            android:lineSpacingExtra="6sp"
            android:gravity="center" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_weight="1"
            android:text="V"
            android:textSize="12sp"
            android:textColor="#e4e4e4"
            android:lineSpacingExtra="6sp"
            android:gravity="center" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="7.5dp"
        android:layout_gravity="bottom"
        android:background="@drawable/shadow_top">
    </View>

    <TextView
        android:id="@+id/account_set_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16.5sp"
        android:textColor="#b1b1b1"
        android:lineSpacingExtra="3.5sp"
        android:paddingVertical="16dp"
        android:gravity="center"
        android:text="다음"
        />

</LinearLayout>
</ScrollView>