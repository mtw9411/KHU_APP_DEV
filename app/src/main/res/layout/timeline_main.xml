<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:isScrollContainer="true"
    android:orientation="vertical"
    tools:context=".TimelineActivity"
    >

    <android.support.constraint.ConstraintLayout
        android:id="@+id/timelineLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:isScrollContainer="true"
        >


        <TextView
            android:id="@+id/textView2"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:gravity="center"
            android:lineSpacingExtra="2.5sp"
            android:text="SESSION 방"
            android:textColor="#222222"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_studyname"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:background="#ffffff"
            android:elevation="3dp"
            android:orientation="horizontal"
            android:overScrollMode="ifContentScrolls"
            android:paddingLeft="49dp"
            android:paddingTop="9.5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="40.5dp"
            android:background="#4c81f8"
            android:gravity="center"
            android:lineSpacingExtra="6.5sp"
            android:text="출석체크하기"
            android:textColor="#ffffff"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/recycler_studyname" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="136dp"
            android:layout_marginLeft="136dp"
            app:layout_constraintBottom_toBottomOf="@+id/textView4"
            app:layout_constraintStart_toStartOf="@+id/textView4"
            app:layout_constraintTop_toTopOf="@+id/textView4"
            app:srcCompat="@mipmap/icon_9" />

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/textView4"
            android:background="#f4f7fc"
            android:paddingBottom="183dp">

            <android.support.constraint.ConstraintLayout
                android:id="@+id/constraintLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:paddingBottom="28dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <android.support.v7.widget.CardView
                    android:id="@+id/cardView2"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="35dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginRight="20dp"
                    android:elevation="3dp"
                    app:cardCornerRadius="3dp"
                    app:cardElevation="5dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="9">

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="57dp"
                            android:layout_weight="3">

                            <ImageView
                                android:id="@+id/imageView4"
                                android:layout_width="match_parent"
                                android:layout_height="57dp"
                                app:srcCompat="@mipmap/icon_26" />

                            <TextView
                                android:id="@+id/textView5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_centerHorizontal="true"
                                android:lineSpacingExtra="5sp"
                                android:text="파일"
                                android:textColor="#acabab"
                                android:textSize="10.5sp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="57dp"
                            android:layout_weight="3">

                            <ImageView
                                android:id="@+id/image_vote"
                                android:layout_width="match_parent"
                                android:layout_height="57dp"
                                app:srcCompat="@mipmap/icon_25" />

                            <TextView
                                android:id="@+id/textView6"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_centerHorizontal="true"
                                android:lineSpacingExtra="5sp"
                                android:text="투표"
                                android:textColor="#acabab"
                                android:textSize="10.5sp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="57dp"
                            android:layout_weight="3">

                            <ImageView
                                android:id="@+id/imageView6"
                                android:layout_width="match_parent"
                                android:layout_height="57dp"
                                app:srcCompat="@mipmap/icon_1" />

                            <TextView
                                android:id="@+id/textView7"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_centerHorizontal="true"
                                android:lineSpacingExtra="5sp"
                                android:text="장소"
                                android:textColor="#acabab"
                                android:textSize="10.5sp" />
                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="57dp">

                        <TextView
                            android:id="@+id/write_content"
                            android:layout_width="315dp"
                            android:layout_height="49dp"
                            android:background="#ffffff"
                            android:ems="10"
                            android:gravity="fill"
                            android:hint="새로운 소식을 남겨보세요"
                            android:inputType="textPersonName"
                            android:isScrollContainer="true"
                            android:lineSpacingExtra="3.5sp"
                            android:paddingLeft="12dp"
                            android:textSize="13sp" />

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="right|center"
                            android:src="@mipmap/icon_3" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>

            </android.support.constraint.ConstraintLayout>

            <TextView
                android:id="@+id/timeline_studyName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="13dp"
                android:lineSpacingExtra="10.5sp"
                android:text="면접 스터디"
                android:textColor="#222222"
                android:textSize="21.5sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/constraintLayout" />

            <TextView
                android:id="@+id/toStudyDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="156dp"
                android:layout_marginLeft="156dp"
                android:lineSpacingExtra="5.5sp"
                android:text="스터디 상세정보"
                android:textColor="#707070"
                android:textSize="11sp"
                app:layout_constraintBottom_toBottomOf="@+id/timeline_studyName"
                app:layout_constraintStart_toEndOf="@+id/timeline_studyName"
                app:layout_constraintTop_toTopOf="@+id/timeline_studyName"
                app:layout_constraintVertical_bias="1.0" />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="12dp"
                android:layout_height="20dp"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:rotation="180"
                app:layout_constraintBottom_toBottomOf="@+id/toStudyDetail"
                app:layout_constraintStart_toEndOf="@+id/toStudyDetail"
                app:layout_constraintTop_toTopOf="@+id/toStudyDetail"
                app:srcCompat="@mipmap/icon_23" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_timelineBoard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:isScrollContainer="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/timeline_studyName" />
        </android.support.constraint.ConstraintLayout>


    </android.support.constraint.ConstraintLayout>
</ScrollView>