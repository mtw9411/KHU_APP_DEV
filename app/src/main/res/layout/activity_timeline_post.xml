<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="5dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:gravity="center"
            android:textSize="13sp"
            android:textColor="#707070"
            android:lineSpacingExtra="2.5sp"
            android:text="SESSION 게시"
            android:fontFamily="@font/notosanscjkkr_bold"/>

        <ImageView
            android:id="@+id/imageView13"
            android:layout_width="24dp"
            android:layout_height="32dp"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            app:srcCompat="@mipmap/icon_23" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:isScrollContainer="true"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/timelinePost_write"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="3dp"
                android:paddingLeft="20dp"
                android:elevation="3dp"
                android:background="#ffffff">
                <TextView
                    android:id="@+id/timelinePost_writeTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textColor="#707070"
                    android:lineSpacingExtra="2.5sp"
                    android:text="SESSION 글쓰기"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/notosanscjkkr_bold"
                    />
                <ImageView
                    android:id="@+id/timelinePost_writeImg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="30dp"
                    android:src="@mipmap/icon_44"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/timelinePost_writeChild"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#f4f7fc">
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="30dp"
                    app:contentPaddingBottom="20dp"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="3dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <EditText
                            android:id="@+id/timelinePost_content"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:layout_marginLeft="12dp"
                            android:background="@null"
                            android:hint="새로운 소식을 남겨보세요."
                            android:letterSpacing="-0.03"
                            android:maxWidth="300dp"
                            android:textColorHint="#4D222222"
                            android:textColor="#707070"
                            android:textSize="12sp"
                            android:fontFamily="@font/notosanscjkkr_regular"/>
                        <ImageView
                            android:id="@+id/timelinePost_img"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="10dp"
                            android:src="@mipmap/icon_30"/>
                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/timelinePost_recyclerPicture"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="20dp"
                            android:layout_below="@+id/timelinePost_img">
                        </android.support.v7.widget.RecyclerView>
                    </RelativeLayout>
                </android.support.v7.widget.CardView>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/timelinePost_vote"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="20dp"
                android:elevation="3dp"
                android:layout_marginBottom="4dp"
                android:background="#ffffff">
                <TextView
                    android:id="@+id/timelinePost_voteTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textColor="#707070"
                    android:lineSpacingExtra="2.5sp"
                    android:text="SESSION 투표"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/notosanscjkkr_bold"
                    />
                <ImageView
                    android:id="@+id/timelinePost_voteImg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="30dp"
                    android:src="@mipmap/icon_45"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/timelinePost_voteChild"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="#f4f7fc"
                android:paddingHorizontal="20dp"
                android:paddingVertical="40dp">

                <LinearLayout
                    android:id="@+id/timelinePost_multi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/timelinePost_multiText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:textSize="12sp"
                        android:textColor="#99222222"
                        android:letterSpacing="-0.03"
                        android:lineSpacingExtra="6sp"
                        android:text="중복 선택 가능"
                        />
                    <ImageView
                        android:id="@+id/timelinePost_multiImg"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@mipmap/icon_15"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/timelinePost_deadline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/timelinePost_multi"
                    android:layout_marginLeft="31dp">
                    <TextView
                        android:id="@+id/timelinePost_deadlineText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:textSize="12sp"
                        android:textColor="#99222222"
                        android:letterSpacing="-0.03"
                        android:lineSpacingExtra="6sp"
                        android:text="마감시간 설정"
                        />
                    <ImageView
                        android:id="@+id/timelinePost_deadlineImg"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@mipmap/icon_15"/>
                </LinearLayout>
                
                <LinearLayout
                    android:id="@+id/voteRelativeLayout_Deadline"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_below="@+id/timelinePost_multi"
                    android:layout_marginHorizontal="3dp"
                    android:orientation="horizontal">
                    
                    <Button
                        android:id="@+id/vote_deadlineSet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="시간 설정하기"
                        android:textSize="12sp"
                        android:textColor="#707070"
                        android:fontFamily="@font/notosanscjkkr_regular"/>

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginVertical="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="3dp"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="3dp">

                        <TextView
                            android:id="@+id/vote_deadlineText"
                            android:layout_width="265dp"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/notosanscjkkr_regular"
                            android:gravity="center_vertical"
                            android:paddingLeft="20dp"
                            android:textColor="#707070"
                            android:textSize="12sp" />
                    </android.support.v7.widget.CardView>
                    
                </LinearLayout>

                <android.support.v7.widget.CardView
                    android:id="@+id/timelinePost_cardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/voteRelativeLayout_Deadline"
                    android:layout_marginTop="14dp"
                    android:layout_marginHorizontal="3dp"
                    app:contentPaddingTop="12dp"
                    app:contentPaddingBottom="12dp"
                    app:contentPaddingLeft="24dp"
                    app:contentPaddingRight="24dp"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="3dp">
                    <EditText
                        android:id="@+id/timelinePost_voteChildTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:hint="투표제목"
                        android:textSize="13sp"
                        android:textColor="#707070"
                        android:background="@null"/>
                </android.support.v7.widget.CardView>

                <LinearLayout
                    android:id="@+id/timelinePost_Linearlayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/timelinePost_cardView"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical">
                </LinearLayout>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_below="@+id/timelinePost_Linearlayout"
                    android:layout_marginHorizontal="3dp"
                    android:layout_marginVertical="5dp"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="3dp">
                    <RelativeLayout
                        android:id="@+id/timelinePost_votePlus"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#f7f7f7">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:src="@mipmap/icon_46"/>
                    </RelativeLayout>
                </android.support.v7.widget.CardView>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/timelinePost_fin"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="15sp"
        android:textColor="#2f78db"
        android:lineSpacingExtra="3sp"
        android:text="완료"
        android:gravity="center"
        android:elevation="11dp"
        android:background="#ffffff"
        android:fontFamily="@font/notosanscjkkr_regular"/>
</LinearLayout>